<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>processAddRecipetoList</servlet-name>
        <servlet-class>happyCook.servlet.processAddRecipetoList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processRemoveRecipefromList</servlet-name>
        <servlet-class>happyCook.servlet.processRemoveRecipefromList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>processAddRecipetoList</servlet-name>
        <url-pattern>/processAddRecipetoList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processRemoveRecipefromList</servlet-name>
        <url-pattern>/processRemoveRecipefromList</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
